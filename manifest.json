{
  "manifest_version": 3,
  "version": "1.0.0",

  "name": "Lichess always have resign button",
  "description": "Always give up, always surrender.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://lichess.org/*"
      ],
      "css": ["aguas.css"],
      "js": ["aguas.js"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [ {
      "resources": [  "aguas.js" ],
        "matches": []
  }
  ]
}
